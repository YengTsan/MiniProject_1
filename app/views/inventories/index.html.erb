<div class="container">
  
  <h1>Inventory Management System</h1>
  <div class="row">
    <div class="col-12">
      <table class="table table-hover form-width">
        <% @inventories.each do |i| %>

          <tr>
            <td style="font-size: 20px">
            <%= i.item %>
            </td>
            <td>
            <%= link_to "Show", inventory_path(i), :class => "btn btn-primary" %>
            <%= link_to "Edit", edit_inventory_path(i), :class => "btn btn-info" %>
            <%= link_to "Delete", inventory_path(i), :method => :delete, :class => "btn btn-danger" %>
            </td>
          </tr>
          </li>
        <% end %>
      </table>

      <br>
      <%= paginate @inventories %>

      <br>
    </div>

    <div class="col-12">
      <% if !@inventory_old.present? %>
        <%= form_for @inventory, :url => inventories_path do |f| %>
          <%= render :partial => 'form', :locals => { :f => f } %>

          <%= f.submit "Create" %>
        <% end %>
      <% end %>

      <% if @inventory_old.present?%>
         <%= form_for @inventory_old, :url => inventories_path, :method => :patch do |f| %>
          <%= render :partial => 'form', :locals => { :f => f } %>

          <%= f.submit "Update" %>
        <% end %>
      <% end %>
    </div>
    
    <p>
      <%= link_to "New inventory", new_inventory_path(@inventory),:class => "btn btn-primary" %>
    </p>

  </div>
</div>
